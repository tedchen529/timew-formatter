{
  "name": "timew-formatter",
  "version": "1.0.0",
  "description": "CLI tool to bridge Timewarrior data with PostgreSQL database for enhanced time tracking analysis",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "timew-formatter": "./src/index.js"
  },
  "scripts": {
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "start": "node src/index.js",
    "dev": "node --watch src/index.js"
  },
  "keywords": [
    "timewarrior",
    "time-tracking",
    "postgresql",
    "cli",
    "productivity"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.0.0",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "vitest": "^1.1.0",
    "@types/pg": "^8.10.9"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}